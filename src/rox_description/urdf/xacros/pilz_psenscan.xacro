<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rox">

  <xacro:macro name="pilz_psenscan" params="name parent *origin">

    <joint name="${name}_joint" type="fixed">
      <axis xyz="0 1 0" />
      <xacro:insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${name}_link"/>
    </joint>
    <link name="${name}_link" type="laser">
      <inertial>
      <mass value="0.001"/>
      <origin rpy="${pi} 0 ${pi/2}" xyz="0 0 0.0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="${pi} 0 ${pi/2}" xyz="0 0 -0.02"/>
      <geometry>
        <mesh filename="package://rox_description/meshes/PSenScan.dae" scale="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="${pi} 0 ${pi/2}" xyz="0 0 -0.02"/>
      <geometry>
        <mesh filename="package://rox_description/meshes/PSenScan.dae" scale="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    </link>

  </xacro:macro>

</robot>
