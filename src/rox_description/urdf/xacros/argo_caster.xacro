<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rox">

  <xacro:macro name="argo_caster" params="name parent *origin vis_rot vis_pos joint_type">

   <joint name="${name}_joint" type="${joint_type}">
    <xacro:insert_block name="origin" />
    <axis xyz="1 0 0" />
    <dynamics damping="1." friction="1.0"/>
    <limit effort="1000.0" lower="-1e+16" upper="1e+16" velocity="100"/>
    <parent link="${parent}" />
    <child link="${name}_link" />
   </joint>

   <link name="${name}_link" type="wheel">
    <inertial>
    <!-- These are not accurate value -->
      <mass value="1.4" />
      <origin xyz="${vis_pos}" rpy="${vis_rot}" />
      <inertia ixx="0.00499743171" ixy="0.00000004464" ixz="-0.00000002245" iyy="0.00499741733" iyz="-0.00000000164" izz="0.00839239692"/>    
    </inertial>
    <visual>
     <origin xyz="${vis_pos}" rpy="${vis_rot}" />
     <geometry>
        <mesh filename="package://rox_description/meshes/argo_caster.dae" scale="0.001 0.001 0.001"/>
     </geometry>
    </visual>
    <collision>
     <origin xyz="${vis_pos}" rpy="${vis_rot}" />
     <geometry>
        <mesh filename="package://rox_description/meshes/argo_caster.dae" scale="0.001 0.001 0.001"/>
     </geometry>
    </collision>
   </link>

  </xacro:macro>

</robot>
